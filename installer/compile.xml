<?xml version="1.0" encoding="UTF-8"?>

<project name="sneer" default="compile">

        <property name="src" location="../code/src" />
        <property name="bin" location="../code/bin" />

        <target name="clean">
                <delete dir="${bin}"/>
                <mkdir dir="${bin}"/>
        </target>

        <target name="copy-resources" depends="clean">
                <copy todir="${bin}">
                        <fileset dir="${src}">
                                <include name='**/**'/>
                                <exclude name='**/*.java'/>
                        </fileset>
                </copy>
        </target>

        <target name="compile" depends="clean, copy-resources">
                <path id="classpath">
                        <fileset dir="${src}">
                                <include name='**/*.jar' />
                        </fileset>
                </path>
                <javac srcdir="${src}" destdir="${bin}" failonerror="true" debug="on" source="1.7" target="1.7" encoding="utf-8" includeAntRuntime="false">
                        <classpath refid="classpath"/>
                </javac>
        </target>

</project>
